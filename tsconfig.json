{
    "compilerOptions": {
      "target": "ES2020",
      "module": "CommonJS",
      "moduleResolution": "node",
      "outDir": "dist",
      "rootDir": "src",
      "baseUrl": "./src",
      "paths": {
        "@helpers/*": ["helpers/*"],
        "@types": ["types"],
        "@plugins/*": ["plugins/*"],
        "@aggregator/*": ["aggregator/*"]
      },
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules/discord.js/**/*"]
  }