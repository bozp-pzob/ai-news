{
  "settings": {
    "runOnce": true
  },
  "sources": [
    {
      "type": "DiscordRawDataSource",
      "name": "discordRaw",
      "interval": 360000,
      "params": {
        "botToken": "process.env.DISCORD_TOKEN",
        "guildId": "process.env.DISCORD_GUILD_ID",
        "channelIds": [
          "1253563209462448241",
          "1300025221834739744",
          "1300756641406521416",
          "1308149076893630555",
          "1299473809166045357",
          "1328592959444095038",
          "1361442528813121556",
          "1362864274862768450",
          "1301363808421543988",
          "1313222089271939102",
          "1326603270893867064",
          "1377726087789940836"
        ],
        "storage": "SQLiteStorage"
      }
    }
  ],
  "ai": [
    {
      "type": "OpenAIProvider",
      "name": "openAiProvider",
      "params": {
        "apiKey": "process.env.OPENAI_API_KEY",
        "model": "anthropic/claude-3.7-sonnet",
        "temperature": 0,
        "useOpenRouter": true,
        "siteUrl": "process.env.SITE_URL",
        "siteName": "process.env.SITE_NAME"
      }
    }
  ],
  "enrichers": [],
  "storage": [
    {
      "type": "SQLiteStorage",
      "name": "SQLiteStorage",
      "params": {
        "dbPath": "data/discord-raw.sqlite"
      }
    }
  ],
  "generators": [
    {
      "type": "RawDataExporter",
      "name": "DiscordRawExporter",
      "interval": 3600000,
      "params": {
        "storage": "SQLiteStorage",
        "source": "discordRawData",
        "outputPath": "./output/discord/raw"
      }
    },
    {
      "type": "DiscordSummaryGenerator",
      "name": "DiscordSummaryGenerator",
      "interval": 3600000,
      "params": {
        "provider": "openAiProvider",
        "storage": "SQLiteStorage",
        "summaryType": "discordChannelSummary",
        "source": "discordRawData",
        "outputPath": "./output/discord/summaries"
      }
    }
  ]
}
